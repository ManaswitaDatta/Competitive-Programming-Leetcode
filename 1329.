class Solution {
    public int[][] diagonalSort(int[][] mat) {
        Map<Integer, PriorityQueue<Integer>> map = new HashMap<>();
        int r = mat.length;
        int c = mat[0].length;
        for(int i = 0; i < r; i++)
            for(int j = 0; j < c; j++){
                PriorityQueue<Integer> pq;
                if(map.containsKey(i-j))
                    pq = map.get(i-j);
                else pq = new PriorityQueue<>();
                pq.add(mat[i][j]);
                map.put(i-j, pq);
            }
       for(int i = 0; i < r; i++)
            for(int j = 0; j < c; j++)
                mat[i][j] = map.get(i-j).remove();
        return mat;
                
    }
}
